{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],
    "@typescript-eslint/interface-name-prefix": [
      "error", {
        "prefixWithI": "always",
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript":{}
    }
  }
}
